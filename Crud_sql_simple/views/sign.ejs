<%- include('header'); -%>
<form class="form" method="post" action="/sign" >
    <p class="title">Register </p>
    <p class="message">Signup now and get full access to our app. </p>
        <div class="flex">
        <label>
            <input required="" placeholder="" type="text" class="input" name="nom" id="nom" value="<%= result.nom %>">
            <span>Firstname</span>
        </label>

        <label>
            <input required="" placeholder="" type="text" class="input" name="prenom" id="prenom" value="<%= result.prenom %>">
            <span>Lastname</span>
        </label>
    </div>  
            
    <label>
        <input required="" placeholder="" type="email" class="input" name="email" id="email" value="<%= result.email %>">
        <span>Email</span>
    </label> 
    <label>
        <input required="" placeholder="" type="password" class="input" name="password" id="password" value="<%= result.password %>">
        <span>Password</span>
    </label>
    <button class="submit">Submit</button>
    <p class="signin">Already have an acount ? <a href="#">Signin</a> </p>
    
</form>

<%- include('footer'); -%>